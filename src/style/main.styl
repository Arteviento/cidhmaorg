@import 'nib'

$ancho_logo = 60vw

h1, h2, h3
	margin: 0
	padding: 0

body
	height: 100vh
	margin: 0
	padding: 0
.landing
	background-color: #FFF
	position: absolute
	z-index: 10
	top 0
	left: 0
	width: 100%
	height 100%
	display: flex
	justify-content: center
	align-content: center
	transition all .8s linear
	&--none
		opacity: 0
		visibility: hidden
.logo
	width: $ancho_logo

.cidhma
	z-index: 1