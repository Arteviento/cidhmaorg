@import 'nib'

$ancho_logo = 60vw

h1, h2, h3
	margin: 0
	padding: 0

body
	height: 100vh
	margin: 0
	padding: 0
	
//PAGINA INICIAL
.landing
	background-color: #FFF
	position: absolute
	z-index: 10
	top 0
	left: 0
	width: 100%
	height 100%
	display: flex
	justify-content: center
	align-content: center
	transition all .8s linear
	&--none
		opacity: 0
		visibility: hidden
.logo
	width: $ancho_logo

//PAGINA ESTABLE
.content
	width 100%
	height: 100vh
	display flex
	flex-direction: column
.box
	text-align: center
	padding: 4%
	color: #000
	text-decoration: none
	&_ingenieria
		flex-grow 1
	&_capacitaciones
		flex-grow 1
	&__logo
		height: 20vh
	&__label
		position: relative