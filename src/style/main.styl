@import 'nib'

@font-face
	font-family Run;
	src url(/assets/font/run.ttf)
	
$ancho_logo = 60vw

h1, h2, h3
	margin: 0
	padding: 0

body
	height: 100vh
	margin: 0
	padding: 0
	
//PAGINA INICIAL
.landing
	background-color: #FFF
	position: absolute
	z-index: 10
	top 0
	left: 0
	width: 100%
	height 100%
	display: flex
	justify-content: center
	align-content: center
	transition all .8s linear
	&--none
		opacity: 0
		visibility: hidden
.logo
	width: $ancho_logo

//PAGINA ESTABLE
.content
	width 100%
	height: 100vh
	display flex
	flex-direction: column
.box
	position: relative
	text-align: center
	padding: 5%
	text-decoration: none
	&_ingenieria
		flex-grow 1
	&_capacitaciones
		flex-grow 1
	&__logo
		position: absolute
		top: 50%; 
		left: 50%;
		transform: translate(-50%, -50%);
		height: 25vh
	&__label
		font-size: 1.1em
		width 60%
		text-align: center
		position: absolute
		bottom 5%
		left 20%
		font-family "Run"
		letter-spacing 0.1em